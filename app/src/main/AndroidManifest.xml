<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.easyo_alarm">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
        android:name=".AppClass"
        android:allowBackup="true"
        android:icon="@mipmap/icon_maidalarm"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_maidalarm_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyO_Alarm"
        android:hardwareAccelerated="true">
        <activity android:name=".SelectRingActivity"/>
        <activity android:name=".LicenseActivity" />
        <activity android:name=".InfoActivity" />
        <activity android:name=".FrontAlarmActivity" />

        <service
            android:name=".Service"
            android:stopWithTask="false" />

        <activity android:name=".ShortAlarmSetActivity" />
        <activity android:name=".AlarmSetActivity" />

        <!-- value 의 경우 현재 테스트용임 -->
        <!-- 실제로 앱 배포시에는 자신의 광고 ID 참조하기 -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-9481402975436770~6533361405" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".Receiver"
            android:directBootAware="true"
            android:enabled="true"
            tools:targetApi="n">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="POSTPHONETIME" />
            </intent-filter>
        </receiver>
    </application>

</manifest>