<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EasyO_Alarm" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Dark 모드 사용안함-->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!--타이틀 바 삭제-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--작업표시줄 투명화-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>


    </style>

    <!-- numberPickerCustomTheme -->
    <style name="numberPickerCustomTheme">
        <item name="android:textSize">
            20sp
        </item>
        <item name="fontFamily">
            @font/nanumgothicextrabold
        </item>
        <item name="android:editTextColor">
            @color/white
        </item>
    </style>

    <!-- seekbar style -->
    <style name="seekbarTheme" parent="Theme.AppCompat.Light">
        <item name="android:progressBackgroundTint">@color/white</item>
        <item name="android:progressTint">@color/Space_Purple</item>
        <item name="android:colorControlActivated">@color/Orange</item>
    </style>

</resources>